{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Awth Butler",
  "version": "0.1.1",
  "identifier": "dev.gzn.awth-butler.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "",
        "label": "main",
        "width": 810,
        "minWidth": 810,
        "height": 870,
        "minHeight": 870,
        "visible": false
      },
      {
        "title": "",
        "label": "splashscreen",
        "url": "/splashscreen",
        "width": 810,
        "minWidth": 810,
        "height": 870,
        "minHeight": 870
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
